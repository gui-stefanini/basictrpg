func _on_unit_died(unit: Unit):
	print("%s has been defeated!" % unit.name)
	
	if PlayerUnits.is_empty():
		print("All player units defeated!")
		defeat.emit()
	
	elif EnemyUnits.is_empty():
		print("All enemies defeated!")
		victory.emit()

