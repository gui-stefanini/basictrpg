func UnitDied(unit: Unit):
	print("%s has been defeated!" % unit.Data.Name)
	
	if UnitManager.PlayerUnits.is_empty():
		print("All player units defeated!")
		defeat.emit()
	
	elif UnitManager.EnemyUnits.is_empty():
		print("All enemies defeated!")
		victory.emit()

